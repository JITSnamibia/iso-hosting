rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection:
    // - Allow owner to read and write their own document.
    // - Allow any authenticated user to read the 'email' field (or other public profile fields)
    //   for the purpose of searching/adding friends.
    match /users/{userId} {
      allow read: if request.auth != null; // Allows reading fields like email for search
                   // Consider restricting this further to specific fields if needed:
                   // e.g. if request.auth != null && resource.data.keys().hasAll(['email', 'displayName'])
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /friends/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /files/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}